@model PizzaDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<h2>Pizza Ordering Details</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details" method="post">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>

                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <th>
                            <img src="@Model.Pizza.ImgUrl"  width="300" height="300" />
                        </th>
                        <th>
                            @Model.Pizza.Name
                        </th>
                        <th>
                            @Model.Pizza.Description
                        </th>
                        <th>
                            @Model.Pizza.Price$
                        </th>
                       
                    </tr>

                </tbody>

            </table>    
            <div>
                <a class="btn btn-success" asp-controller="Pizza" asp-action="DetailsOrder" asp-route-id="@Model.Pizza.Id">Order Now!</a>    
            </div>
            
        </form>
    </div>
</div>
<footer>
    <br/>
</footer>
