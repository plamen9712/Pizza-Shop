@model DeletePizzaFormModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
          
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input  asp-for="Description" class="form-control" disabled/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" disabled/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl"></label>
                <input asp-for="ImgUrl" class="form-control"disabled />
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Delete Pizza</button>
        </form>
    </div>
</div>

